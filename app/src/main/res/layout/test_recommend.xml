<?xml version="1.0" encoding="utf-8"?><!-- main content -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:src="@drawable/test_cover"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@id/ivCover">
        <TextView
            android:id="@+id/tvSong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/distance_small"
            android:textSize="@dimen/text_size_medium"
            android:text="我听这种音乐的时候最爱你"/>

        <TextView
            android:id="@+id/tvArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/distance_small"
            android:textSize="@dimen/text_size_small"
            android:text="龙宽九段"/>
    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/distance_small"
        android:clickable="true"
        android:src="@drawable/ic_arrow_back"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:rippleColor="@color/colorPrimary" />
</RelativeLayout>


